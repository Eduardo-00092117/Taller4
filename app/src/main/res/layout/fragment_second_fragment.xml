<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:padding="16dp"
    tools:context=".second_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_isbnUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="ISBN: N/A"/>

        <TextView
            android:id="@+id/tv_tituloUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Titulo: N/A"/>

        <TextView
            android:id="@+id/tv_resumenUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Resumen: N/A"/>

        <TextView
            android:id="@+id/tv_edicionUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="EdiciÃ³n: N/A"/>

        <TextView
            android:id="@+id/tv_favoriteUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Favorito: N/A"/>

        <TextView
            android:id="@+id/tv_AutorUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:text="Autor(es): N/A"/>
        <TextView
            android:id="@+id/tv_EditorialUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:text="Editorial(es): N/A"/>
        <TextView
            android:id="@+id/tv_tagUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:text="Tag(s): N/A"/>
    </LinearLayout>

</ScrollView>